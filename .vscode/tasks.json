{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "typecheck:all",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Build plugin",
      "type": "shell",
      "command": ["yarn", "update"],
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": { "cwd": "${workspaceFolder}/packages/plugins/plugin-build" }
    }
  ]
}
